.main_chat__contents__content{data: {message: {id: message.id}}}
  .main_chat__contents__content__list
    .main_chat__contents__content__list__name
      = message.user.name
    .main_chat__contents__content__list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__contents__content__text__message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__content' if message.image.present?
