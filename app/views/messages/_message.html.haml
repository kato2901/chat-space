
.main_chat__contents__content__list
  .main_chat__contents__content__list__name
    = message.user.name
  .main_chat__contents__content__list__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.main_chat__contents__content__text__message
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'main_chat__contents__content__text__message' if message.image.present?
